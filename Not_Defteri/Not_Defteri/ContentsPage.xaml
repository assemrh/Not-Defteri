                                        <StackLayout>
                                            <Label Text="{Binding Baslik}" 
                                               Margin="0,3" 
                                               FontSize="24" />
                                            <StackLayout>

                                                <Label Text="{Binding Icerik}" Margin="0" />
                                                <Label Text="{Binding EklemeTarihi}" Margin="3" HorizontalOptions="Center" />
                                            </StackLayout>
                                        </StackLayout>

                                    </Frame>
                                </Grid>
                        </ViewCell>
                        
                    </DataTemplate>
                </ListView.ItemTemplate>
                
            </ListView>

        </StackLayout>

